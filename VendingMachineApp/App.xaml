<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="VendingMachineApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VendingMachineApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Shadow
                x:Key="DefaultShadow"
                Opacity="0.75"
                Radius="15"
                Offset="0,7.5" />

            <Style x:Key="Label" TargetType="Label">
                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="{StaticResource 4}" />
                <Setter Property="FontSize" Value="{OnPlatform Android=24, WinUI=32}" />


            </Style>

            <Style x:Key="Boton" TargetType="Button">

                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="BackgroundColor" Value="{StaticResource 3}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="{OnPlatform Android=15, WinUI=24}" />
                <Setter Property="WidthRequest" Value="{OnPlatform Android=100, WinUI=280}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Android=60, WinUI=80}" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="BorderWidth" Value="2" />



                <Setter Property="VisualStateManager.VisualStateGroups">

                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>


                        </VisualStateGroup>
                    </VisualStateGroupList>



                </Setter>
            </Style>

            <Style x:Key="BotonMaquina" TargetType="Button">

                <Setter Property="FontFamily" Value="Monserrat" />
                <Setter Property="BackgroundColor" Value="{StaticResource 3}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="{OnPlatform Android=15, WinUI=24}" />
                <Setter Property="WidthRequest" Value="{OnPlatform Android=100, WinUI=250}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Android=60, WinUI=80}" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource 4}, Dark={StaticResource 1}}" />
                <Setter Property="BorderWidth" Value="2" />



                <Setter Property="VisualStateManager.VisualStateGroups">

                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource 4}" />
                                    <Setter Property="TextColor" Value="{StaticResource 1}" />
                                    <Setter Property="BorderColor" Value="{StaticResource 2}" />
                                </VisualState.Setters>
                            </VisualState>


                        </VisualStateGroup>
                    </VisualStateGroupList>



                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
